                {
                    "Host": "localhost",
                    "Port": 7190
                }
            ]
        },
        {
            "UpstreamPathTemplate": "/api/v1/auth/revoke",
            "UpstreamHttpMethod": [ "DELETE" ],
            "DownstreamScheme": "https",
            "DownstreamPathTemplate": "/api/v1/token/revoke-token",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 7190
                }
            ]
        },
        {
            "UpstreamPathTemplate": "/api/v1/register/email",
            "UpstreamHttpMethod": [ "Post" ],
